{
  "name": "@fluxomail/sdk",
  "version": "0.3.3",
  "description": "Fluxomail SDK for JS/TS: send emails, list/subscribe to events, get timelines.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "fluxomail": "bin/fluxomail.mjs"
  },
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "scripts": {
    "codegen:openapi": "node scripts/generate-openapi-types.mjs",
    "ci:codegen-check": "npm run codegen:openapi && node scripts/codegen-check.mjs",
    "ci:pack-check": "node scripts/check-pack.mjs",
    "build:dist": "tsup src/index.ts --dts --format esm --sourcemap --clean",
    "build": "npm run codegen:openapi && npm run build:dist",
    "dev": "tsup src/index.ts --dts --format esm --sourcemap --watch",
    "pretest": "npm run build",
    "test": "node scripts/run-tests.mjs",
    "smoke:e2e": "node scripts/smoke-e2e.mjs",
    "test:coverage": "c8 --reporter=text --reporter=lcov --exclude=bin/** --exclude=tests/** --exclude=**/src/events/stream.ts npm test",
    "commitlint": "commitlint --from=origin/main --to=HEAD --verbose",
    "setup:hooks": "git config core.hooksPath .husky",
    "prepare": "husky install && npm run build:dist",
    "release:tag": "node -e \"const v=require('./package.json').version; const {execSync}=require('node:child_process'); execSync('git tag v'+v,{stdio:'inherit'}); console.log('Tagged v'+v)\"",
    "release:tag:push": "node -e \"const v=require('./package.json').version; console.log('Pushing tag v'+v)\" && git push origin v$(node -p \"require('./package.json').version\")"
  },
  "keywords": [
    "email",
    "sdk",
    "sse",
    "events",
    "fluxomail"
  ],
  "author": "Fluxomail",
  "repository": {
    "type": "git",
    "url": "https://github.com/HiroXSoftwareSolutions/fluxomail-sdk-js"
  },
  "homepage": "https://docs.fluxomail.com/api-reference/fluxomail/cli",
  "bugs": {
    "url": "https://github.com/HiroXSoftwareSolutions/fluxomail-sdk-js/issues"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "preferGlobal": true,
  "dependencies": {
    "eventsource": "4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "c8": "^10.1.3",
    "husky": "^9.1.6",
    "openapi-typescript": "^6.7.4",
    "tsup": "^8.1.0",
    "typescript": "^5.6.3"
  }
}
